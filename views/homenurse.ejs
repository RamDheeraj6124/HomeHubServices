    .container .navbar1 {
  display: flex;
  background-color: rgb(249, 245, 245);
  padding: 10px;
  
  position: relative;
  height: 50px;
  flex-wrap: wrap; /* Allow the navbar items to wrap to the next line */
}

.container .navbar1 a {
  color: rgb(96, 107, 107);
  text-decoration: none;
  padding: 6px;
  margin-left: -5px;
  margin-top: 10px;
  position: relative;
  width: 115px;
  box-sizing: border-box; /* Include padding and border in the width calculation */
}

.container .navbar1 a:hover {
  color: black;
}

.container .navbar1 .dropdown {
  position: relative;
  display: inline-block;
}

.container .navbar1 .dropdown-content {
  display: none;
  position: absolute;
  background-color: #f9f9f9;
  min-width: 460px;
  box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
  z-index: 1;
  width: 100%;
  left: 0;
  top: 100%;
}

.container .navbar1 .dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.container .navbar1 .dropdown-content a:hover {
  background-color: #f1f1f1;
}

.container .navbar1 .dropdown:hover .dropdown-content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.container .navbar1 .dropdown-content a {
  width: 110%; /* Each dropdown item takes up the full width */
  box-sizing: border-box; /* Include padding and border in the width calculation */
}
